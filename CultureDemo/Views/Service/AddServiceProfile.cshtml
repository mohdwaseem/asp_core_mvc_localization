@model CultureDemo.ViewModels.ServiceProfileVM
@{
    ViewData["Title"] = "AddServiceProfile";
}

<h1>AddServiceProfile</h1>

<form asp-controller="Service" asp-action="AddServiceProfile" method="post" class="form-horizontal" role="form">


    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Title" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Title" class="form-control">

        </div>
    </div>
    <div class="form-group">
        <label asp-for="Service" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <select asp-for="ServiceId" class="form-control" asp-items="@Model.ServiceList">
                <option value="">Select Service</option>
            </select>

        </div>
    </div>
    <div class="form-group">
        <label asp-for="Authority" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <select asp-for="AuthorityId" class="form-control"  asp-items="@Model.AuthorityList"> </select>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Bank" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <select asp-for="BankId" class="form-control" asp-items="@Model.BankList"></select>

        </div>
    </div>
    


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-success">Save</button>
        </div>
    </div>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
